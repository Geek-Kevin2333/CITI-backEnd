<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nju.edu.citibackend.mapperservice.UserMapper">
	<resultMap id="BaseResultMap" type="UserPO">
		<id column="user_id" property="id" javaType="int"/>
		<result column="username" property="username" javaType="String"></result>
		<result column="email" property="email" javaType="String"></result>
		<result column="user_phone" property="phone" javaType="String"/>
		<result column="user_password" property="password" javaType="String"/>
	</resultMap>

	<select id="selectUserById" parameterType="int" resultMap="BaseResultMap">
		SELECT * FROM `user` where user_id = #{id};
	</select>

	<select id="selectUserByPhone" parameterType="java.lang.String" resultMap="BaseResultMap">
		SELECT * FROM `user` where `user_phone` = #{phone};
	</select>

	<insert id="insertUser" parameterType="UserPO" useGeneratedKeys="true" keyProperty="id">
		insert into `user`(username,email,user_phone, user_password) values(#{username},#{email},#{phone}, #{password});
	</insert>

	<delete id="deleteUser" parameterType="int">
		delete from user where user_id = #{id};
	</delete>
</mapper>
